{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="flex justify-center rounded-lg bg-neutral-600 mt-24 mx-auto w-11/12 lg:w-6/12 pt-2 pb-1">
    <form method="post">
        <div class="addw-full">
            <h1 class="flex justify-center text-white text-2xl font-bold ">CONNEXION</h1>
        </div>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="mt-2 w-full">
            <label class="text-white pl-3 text-26" for="email">Email :</label><br>
            <div class="flex justify-center">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="bg-neutral-800 h-8 w-11/12 border-black rounded-lg text-white text-22 mt-1 px-2" autocomplete="email" required autofocus>
            </div>
        </div>
        <div class="mt-2 w-full">
            <label class="text-white pl-3 text-26" for="inputPassword">Mot de passe :</label>
            <div class="flex justify-center">
            <input type="password" name="password" id="inputPassword" class="bg-neutral-800 h-8 w-11/12 border-black rounded-lg text-white text-22 mt-1 px-2" autocomplete="current-password" required>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="pl-3">
            <input type="checkbox" name="_remember_me">
            <label class="text-white" for="_remember_me">Se souvenir de moi</label>
        </div>

        <button class="btn text-xl text-white bg-sky-400 hover:bg-sky-600 rounded-lg w-60 m-5 text-center" type="submit">Se connecter</button><br>
        <a class="pl-3 text-white hover:text-sky-600 text-center font-bold" href="/register">
            Pas de compte ? Inscrivez-vous ici 
        </a>
    </form>
</div>
{% endblock %}
