{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="bg-neutral-600 rounded-lg w-11/12 mx-auto mt-24">
        <div class="flex justify-center items-center h-8 mt-1 text-white">
            <h1 class="text-3xl pt-8">Votre Profil</h1>
        </div>
        <div class="flex justify-between mx-8 my-5 text-white pl-2 text-xl">
             {% for user in users %}
                <div>{{ user.id }}</div>
                <div>{{ user.email }}</div>
                <div>{{ user.roles ? user.roles|json_encode : '' }}</div>
                <div>{{ user.pseudo }}</div>
                <div>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a><br>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </div>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
        </div>
    </div>
{% endblock %}
