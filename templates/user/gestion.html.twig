{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="bg-neutral-600 flex flex-col justify-center rounded-lg w-11/12 mx-auto mt-24">
        <div class="flex justify-center items-center h-8 mt-1 mb-2 text-white">
            <h1 class="text-3xl pt-8">Gestion des utilisateurs</h1>
        </div>
        <table class="mx-8 my-10 border text-white pl-2 text-xl">
            <thead>
                <tr>
                    <th scope="col" class="border">Identifiant</th>
                    <th scope="col" class="border">Pseudo</th>
                    <th scope="col" class="border">Email</th>
                    <th scope="col" class="border">Roles</th>
                    <th scope="col" class="border">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="mx-8 mb-6">
                    <td class="border text-center py-2">{{ user.id }}</td>
                    <td class="border text-center">{{ user.pseudo }}</td>
                    <td class="border text-center">{{ user.email }}</td>
                    <td class="border text-center">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td class="border text-center">
                        <div class="m-5">
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-xl text-white bg-sky-400 hover:bg-sky-600 rounded-lg text-center">Editer le compte</a>  
                        </div>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun contenu trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
