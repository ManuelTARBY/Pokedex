            },
            indexAxis: 'y'
        }
    });</script>
    <script>var ctx = document.getElementById('chartShasses').getContext('2d');
    var name_fr = [];
    var occurrences = [];
    {% for pokemon in top_shasse %}
        name_fr.push("{{pokemon.name_fr}}");
