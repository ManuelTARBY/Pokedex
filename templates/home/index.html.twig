{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="w-10/12 mx-auto mt-24 grid gap-5 md:grid-cols-2">
    <div class="bg-neutral-600 w-full h-60 border-black border-3 rounded-lg px-4 py-16" id="bloc-top-shasse">
        <div class="underline text-white fontsize-30px  mb-0.5em">Top Shasses du jour<br></div>
        <canvas id="chartShasses"></canvas>
    </div>
    <div class="bg-neutral-600 w-full h-60 border-black border-3 rounded-lg px-4 py-16" id="bloc-top-dresseur">
        <div class="title-bloc-accueil">Top Dresseurs<br></div>
        <canvas id="chartBestDresseurs"></canvas>
    </div>
    <div class="bg-neutral-600 w-full h-60 border-black border-3 rounded-lg px-4 py-16" id="bloc-shiny-jour">
        <div class="title-bloc-accueil">Shiny<br></div>
        <canvas id="chartShinyDay"></canvas>
    </div>
    <div class="bg-neutral-600 w-full h-60 border-black border-3 rounded-lg px-4 py-16" id="bloc-pokemon-team">
        <div class="title-bloc-accueil">Top Pokemon Team<br></div>
        <canvas id="chartPokemonTeam"></canvas>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>var ctx = document.getElementById('chartPokemonTeam').getContext('2d');
    var pokemons = [];
    var occurrences = [];
    {% for pokemon in pokemon_team %}
        pokemons.push("{{pokemon.name_fr}}");
        occurrences.push("{{pokemon.occurrence}}");
    {% endfor %}
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: pokemons,
            datasets: [{
                label: 'Top Pokemon Team',
                data: occurrences,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            indexAxis: 'y'
        }
    });</script>
    <script>var ctx = document.getElementById('chartShinyDay').getContext('2d');
    var days = [];
    var nbCaught = [];
    {% for caught in shiny_du_jour %}
        days.push("{{caught.date_capture}}");
        nbCaught.push("{{caught.nb_capture}}");
    {% endfor %}
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: days,
            datasets: [{
                label: 'Shiny',
                data: nbCaught,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });</script>
    <script>var ctx = document.getElementById('chartBestDresseurs').getContext('2d');
    var dresseurs = [];
    var nbCaught = [];
    {% for dresseur in top_dresseur %}
        dresseurs.push("{{dresseur.dresseur}}");
        nbCaught.push("{{dresseur.occurrences}}");
    {% endfor %}
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: dresseurs,
            datasets: [{
                label: '',
                data: nbCaught,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
